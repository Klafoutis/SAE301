                        {{ form_row(form.guestFirstname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.guestLastname) }}
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_label(form.guestPhone) }}
                    {{ form_widget(form.guestPhone, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text">Utilis√© uniquement pour vous pr√©venir de mon arriv√©e ou en cas de retard.</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.guestEmail) }}
                </div>
            {% endif %}

            <hr class="my-4">

            <div class="mb-3">
