{% extends 'base.html.twig' %}

{% block title %}Confirmation{% endblock %}

{% block body %}
    <div class="container text-center py-5">
        <div class="card shadow p-5 mx-auto" style="max-width: 600px;">
            <h1 class="text-success mb-3">✅ Réservation Confirmée !</h1>

            <h2 class="h4 mb-4">Merci {{ name }}</h2>

            <div class="alert alert-light border">
                <p class="mb-1">Un email de confirmation a été envoyé à : <strong>{{ email }}</strong></p>
                <p class="mb-0">Je serais chez vous le : <strong>{{ date }}</strong></p>
            </div>

            <a href="{{ path('app_reservation') }}" class="btn btn-primary mt-3">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}
